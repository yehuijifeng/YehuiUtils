<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="0dp">
                <!--<ImageView
                    android:id="@+id/title_default_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_title_back"
                    android:src="@drawable/ic_menu_back" />-->
                <TextView
                    android:id="@+id/title_default_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:padding="@dimen/default_padding_and_margin"
                    android:textColor="@color/white"
                    android:text="标题"
                    android:layout_gravity="center"
                    android:textSize="@dimen/default_xx_text_size" />

                <TextView
                    android:id="@+id/title_default_right_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/default_padding_and_margin"
                    android:text="编辑"
                    android:textSize="@dimen/small_text_size"
                    />
            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
</LinearLayout>