<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yehui.utils">
    <!--操作sd卡-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.YehuiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.CartAnimationActivity"
            android:launchMode="singleTop">

        </activity>

        <!--viewpager-->
        <activity
            android:name=".activity.ViewpagerActivity"
            android:launchMode="singleTop">

        </activity>

        <!--recyclerview-->
        <activity
            android:name=".activity.RecyclerListActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--多级列表-->
        <activity
            android:name=".activity.ExpandableListActivity"
            android:launchMode="singleTop">


        </activity>
    </application>

</manifest>
