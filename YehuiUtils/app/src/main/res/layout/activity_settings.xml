<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_my_title" />

    <RelativeLayout
        android:id="@+id/setting_language_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_hour_height"
        android:background="@drawable/bg_default_view">

        <TextView
            android:id="@+id/textView2"
            style="@style/default_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_setting" />

        <ImageView
            style="@style/default_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_drop_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_hour_height"
        android:background="@drawable/bg_default_view">

        <TextView
            android:id="@+id/textView3"
            style="@style/default_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other_setting" />

        <ImageView
            style="@style/default_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_drop_right" />
    </RelativeLayout>
</LinearLayout>