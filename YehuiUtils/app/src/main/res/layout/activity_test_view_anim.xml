<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_my_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_anim_translate"
                style="@style/default_button_style"
                android:layout_width="wrap_content"
                android:text="平移" />

            <Button
                android:id="@+id/btn_anim_scale"
                style="@style/default_button_style"
                android:layout_width="wrap_content"
                android:text="缩放" />

            <Button
                android:id="@+id/btn_anim_rotate"
                style="@style/default_button_style"
                android:layout_width="wrap_content"
                android:text="旋转" />

            <Button
                android:id="@+id/btn_anim_alpha"
                style="@style/default_button_style"
                android:layout_width="wrap_content"
                android:text="透明度" />


            <Button
                android:id="@+id/btn_anim_custom"
                style="@style/default_button_style"
                android:layout_width="wrap_content"
                android:text="自定义" />

            <ImageView
                android:id="@+id/show_anim"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_refresh_people_0" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>